<Window x:Class="fitness.Windows.ActionWindows.AbonementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="550" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <TextBlock x:Name="WindowTitle" 
                   Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <materialDesign:Card Padding="16 0 16 0" Margin="20 20 20 0" Grid.ColumnSpan="2" Grid.Row="1"
                   Background="{StaticResource PrimaryHueLightBrush}">
            <!-- Форма редактирования -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Название услуги -->
                <TextBlock Text="Название:" 
                           Grid.Row="0" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="abonementName"
                         Style="{StaticResource TextBoxFilled}"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         />

                <!-- Цена -->
                <TextBlock Text="Цена:" 
                           Grid.Row="1" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="abonementPrice"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16" PreviewTextInput="TextBox_PreviewTextInput"
                         Style="{StaticResource TextBoxFilled}"
                         
                         />

                <!-- Цена -->
                <TextBlock Text="Срок (дней):" 
                           Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="abonementDays"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16" PreviewTextInput="TextBox_PreviewTextInput"
                         Style="{StaticResource TextBoxFilled}"
                         
                         />

                <!-- Цена -->
                <TextBlock Text="Заморозка:" 
                           Grid.Row="3" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="abonementFreeze"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16" PreviewTextInput="TextBox_PreviewTextInput"
                         Style="{StaticResource TextBoxFilled}"
                         
                         />

                <!-- Описание -->
                <TextBlock Text="Описание:" 
                           Grid.Row="4" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="abonementDesc"
                         Grid.Row="4" Grid.Column="1"
                         Margin="0 0 0 10"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="120"
                         Style="{StaticResource TextBoxFilled}"
                         FontSize="16"
                         />
            </Grid>
        </materialDesign:Card>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button Content="Сохранить"
                    Margin="0 0 10 0"
                    Width="120" Click="AddButtonClick"/>

            <Button Content="Отмена"
                    Width="120" Click="CancelButtonClick"/>
        </StackPanel>
    </Grid>
</Window>