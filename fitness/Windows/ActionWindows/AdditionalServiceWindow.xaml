<Window x:Class="fitness.Windows.ActionWindows.AdditionalServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="600" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="WindowTitle" 
                   Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <materialDesign:Card Padding="16 0 16 0" Margin="20 20 20 0" Grid.Row="1"
                   Background="{StaticResource PrimaryHueLightBrush}">
            <!-- Форма редактирования -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Название услуги -->
                    <TextBlock Text="Название услуги:" 
                               Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               Foreground="White"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>

                    <TextBox x:Name="serviceName"
                             Style="{StaticResource TextBoxFilled}"
                             Grid.Row="0" Grid.Column="1"
                             Margin="0 30 0 10"
                             FontSize="16"/>

                    <!-- Цена -->
                    <TextBlock Text="Цена:" 
                               Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBox x:Name="servicePrice"
                             Grid.Row="1" Grid.Column="1"
                             Margin="0 30 0 10"
                             FontSize="16" 
                             PreviewTextInput="TextBox_PreviewTextInput"
                             Style="{StaticResource TextBoxFilled}"/>

                    <!-- Описание -->
                    <TextBlock Text="Описание:" 
                               Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBox x:Name="serviceDesc"
                             Grid.Row="2" Grid.Column="1"
                             Margin="0 30 0 10"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="120"
                             Style="{StaticResource TextBoxFilled}"
                             TextAlignment="Left"
                             FontSize="16"/>
                </Grid>

                <!-- Блок с изображением -->
                <StackPanel Grid.Column="1" Margin="20 0 0 0" VerticalAlignment="Center">
                    <Border  
                            Width="300" 
                            Height="250"
                            >
                        <Image x:Name="serviceImage" 
                               Stretch="Uniform"
                               Source="../../Images/picture.jpg"/>
                    </Border>

                    <Button x:Name="loadButton"
                            Content="Загрузить изображение"
                            Margin="0 10 0 0"
                            Width="200"
                            Click="UploadImage_Click"
                            />

                    <Button 
                            Content="Удалить изображение"
                            Margin="0 5 0 0"
                            Width="200"
                            Click="RemoveImage_Click"
                            Visibility="Collapsed"
                            x:Name="removeImageBtn"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <StackPanel   
                    Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button x:Name="ButtonsPanel"
                    Content="Сохранить"
                    Margin="0 0 10 0"
                    Width="120" 
                    Click="AddButtonClick"
                    />

            <Button x:Name="closeBtn"
                Content="Отмена"
                    Width="120" 
                    Click="CancelButtonClick"
                    />
        </StackPanel>
    </Grid>
</Window>