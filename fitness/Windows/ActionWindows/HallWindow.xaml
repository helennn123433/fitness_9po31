<Window x:Class="fitness.Windows.ActionWindows.HallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="600" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="WindowTitle" 
                   Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <materialDesign:Card Padding="16 0 16 0" Margin="20 20 20 0" Grid.Row="1"
                   Background="{StaticResource PrimaryHueLightBrush}">
            <!-- Форма редактирования -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Тип зала -->
                    <TextBlock Text="Тип зала:" 
                               Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <ComboBox x:Name="hallTypeComboBox" 
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Grid.Row="0" Grid.Column="1"
                              Margin="0 30 0 10"
                              FontSize="16">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NameTypeHall}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Вместимость -->
                    <TextBlock Text="Вместимость:" 
                               Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBox x:Name="capacityTextBox"
                             Grid.Row="1" Grid.Column="1"
                             Margin="0 30 0 10"
                             FontSize="16" 
                             PreviewTextInput="TextBox_PreviewTextInput"
                             Style="{StaticResource TextBoxFilled}"/>

                    <!-- Площадь -->
                    <TextBlock Text="Площадь (м²):" 
                               Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBox x:Name="areaTextBox"
                             Grid.Row="2" Grid.Column="1"
                             Margin="0 30 0 10"
                             FontSize="16" 
                             PreviewTextInput="TextBox_PreviewTextInput"
                             Style="{StaticResource TextBoxFilled}"/>

                    <!-- Активен -->
                    <TextBlock Text="Активен:" 
                               Grid.Row="3" Grid.Column="0"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0 30 20 10"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <CheckBox x:Name="isActive"
                             Grid.Row="3" Grid.Column="1"
                             Margin="0 30 0 10"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Style="{StaticResource MaterialDesignCheckBox}"/>
                </Grid>

                <!-- Блок с изображением (можно оставить пустым или добавить фото зала) -->
                <StackPanel Grid.Column="1" Margin="20 0 0 0" VerticalAlignment="Center">
                    <Border Width="300" Height="250">
                        <Image x:Name="hallImage" 
                               Stretch="Uniform"
                               Source="../../Images/picture.jpg"/>
                    </Border>

                    <Button x:Name="loadButton"
                         Content="Загрузить изображение"
                         Margin="0 10 0 0"
                         Width="200"
                         Click="UploadImage_Click"
                         />

                    <Button 
                     Content="Удалить изображение"
                     Margin="0 5 0 0"
                     Width="200"
                     Click="RemoveImage_Click"
                     Visibility="Collapsed"
                     x:Name="removeImageBtn"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button x:Name="ButtonsPanel"
                    Content="Сохранить"
                    Margin="0 0 10 0"
                    Width="120" 
                    Click="AddButtonClick"
                    />

            <Button x:Name="closeBtn"
                    Content="Отмена"
                    Width="120" 
                    Click="CancelButtonClick"
                    />
        </StackPanel>
    </Grid>
</Window>