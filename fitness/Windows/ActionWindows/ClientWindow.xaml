<Window x:Class="fitness.Windows.ActionWindows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="800" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <TextBlock x:Name="WindowTitle" 
                   Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <materialDesign:Card Padding="16 0 16 0" Margin="20 20 20 0" Grid.ColumnSpan="2" Grid.Row="1"
                   Background="{StaticResource PrimaryHueLightBrush}">
            <!-- Форма редактирования -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Фамилия:" 
                           Grid.Row="0" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="lastnameTextBox"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Имя:" 
                           Grid.Row="1" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="nameTextBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Отчество:" 
                           Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="middleNameTextBox"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Email:" 
                           Grid.Row="3" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="emailTextBox"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Номер телефона:" 
                           Grid.Row="4" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="phoneTextBox"
                         Grid.Row="4" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Возраст:" 
                           Grid.Row="5" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="ageTextBox"
                         Grid.Row="5" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16" PreviewTextInput="TextBox_PreviewTextInput"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Абонемент:" 
                           Grid.Row="6" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <ComboBox x:Name="abonementComboBox" 
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            Grid.Row="6" Grid.Column="1"
                            Margin="0 0 0 10"
                            FontSize="16"
                           >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AbonementName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Дата старта абонемента:" 
                           Grid.Row="7" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <DatePicker x:Name="datePicker"
                            Grid.Row="7" Grid.Column="1"
                            Margin="0 0 0 10"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignFilledDatePicker}"/>


                <TextBlock Text="Логин:" 
                           x:Name="loginLabel"
                           Grid.Row="8" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="loginTextBox"
                         Grid.Row="8" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />

                <TextBlock Text="Пароль:" 
                           x:Name="passwordLabel"
                           Grid.Row="9" Grid.Column="0"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBox
                         x:Name="passwordTextBox"
                         Grid.Row="9" Grid.Column="1"
                         Margin="0 0 0 10"
                         FontSize="16"
                         Style="{StaticResource TextBoxFilled}"
                         />
            </Grid>
        </materialDesign:Card>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button Content="Сохранить"
                    Margin="0 0 10 0"
                    Width="120" Click="AddButtonClick"/>

            <Button Content="Отмена"
                    Width="120" Click="CancelButtonClick"/>
        </StackPanel>
    </Grid>
</Window>