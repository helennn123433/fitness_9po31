<Window x:Class="fitness.Windows.PassportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Паспортные данные" Height="750" Width="500"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <materialDesign:Card Padding="16" Margin="0 0 0 20"
                       Background="{StaticResource PrimaryHueLightBrush}">
                    <StackPanel>
                        <TextBlock Text="Паспортные данные" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 20"
                                   Foreground="White"/>

                        <!-- Серия паспорта -->
                        <TextBlock Text="Серия паспорта" 
                                   Margin="0 5 0 5"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBox x:Name="SeriesTextBox" 
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 Margin="0 0 0 15"
                                 FontSize="16"
                                 Foreground="White"/>

                        <!-- Номер паспорта -->
                        <TextBlock Text="Номер паспорта" 
                                   Margin="0 5 0 5"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBox x:Name="NumberTextBox" 
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 FontSize="16"
                                 Margin="0 0 0 15"
                                 Foreground="White"/>

                        <!-- Кем выдан -->
                        <TextBlock Text="Кем выдан" 
                                   Margin="0 5 0 5"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBox x:Name="IssuedByTextBox" 
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 FontSize="16"
                                 Margin="0 0 0 15"
                                 Foreground="White"/>

                        <!-- Когда выдан -->
                        <TextBlock Text="Дата выдачи" 
                                   Margin="0 5 0 5"
                                   FontSize="16"
                                   Foreground="White"/>
                        <DatePicker x:Name="IssueDatePicker" 
                                 Style="{StaticResource MaterialDesignFilledDatePicker}"
                                 FontSize="16"
                                 Margin="0 0 0 15"
                                 />

                        <!-- Адрес регистрации -->
                        <TextBlock Text="Адрес регистрации" 
                                   Margin="0 5 0 5"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBox x:Name="AddressTextBox" 
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 Margin="0 0 0 20"
                                 FontSize="16"
                                 Height="80"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Foreground="White"/>
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Button Content="Сохранить"
                            Margin="0 0 10 0"
                            Width="120"
                            x:Name="SaveButton"
                            Click="SaveButton_Click"/>
                    <Button Content="Отмена"
                            Width="120"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>