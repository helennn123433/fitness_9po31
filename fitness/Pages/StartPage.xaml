<Page x:Class="fitness.Pages.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Фитнес-клуб | О нас" 
        Width="800"
        Height="600"
        Background="Transparent">

    <Grid>
        <materialDesign:Card Padding="16" Margin="50 0 50 20"
                                     HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                                     Background="{StaticResource PrimaryHueLightBrush}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Добро пожаловать в наш фитнес-клуб!"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"
                           Foreground="White"/>

                <!-- Карточка с приветствием -->

                <StackPanel>
                    <TextBlock Text="Мы заботимся о вашем здоровье!" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0 0 0 20"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>

                    <TextBlock Text="Наш клуб предлагает современное оборудование, профессиональных тренеров и индивидуальный подход к каждому клиенту." 
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Medium"/>
                </StackPanel>

            </StackPanel>
        </materialDesign:Card>

    </Grid>
</Page>