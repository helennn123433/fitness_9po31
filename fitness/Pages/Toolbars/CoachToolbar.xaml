<Page x:Class="fitness.Pages.Toolbars.CoachToolbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:fitness.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="200" d:DesignWidth="200"
      Title="CoachToolbar">

    <StackPanel Background="Transparent">
        <!-- Заголовок -->
        <TextBlock Text="Тренер"
                   FontSize="18"
                   FontWeight="Medium"
                   Margin="16 16 16 8"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   />

        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8 0 8 8"/>

        <!-- Кнопки меню -->
        <Button 
                Content="Залы"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="HallsButton_Click"/>

        <Button 
                Content="Клиенты"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="ClientsButton_Click"/>

        <Button 
                Content="Расписание"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="ScheduleButton_Click"/>

        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8 0 8 8"/>
    </StackPanel>
</Page>
