<Page x:Class="fitness.Pages.Toolbars.AdministratorToolbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="200"
      Title="AdministratorToolbar">

    <StackPanel Background="Transparent">
        <!-- Заголовок -->
        <TextBlock Text="Администратор"
                   FontSize="18"
                   FontWeight="Medium"
                   Margin="16 16 16 8"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   />

        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8 0 8 8"/>

        <!-- Кнопки меню -->
        <Button 
                Content="Услуги"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="ServicesButton_Click"/>

        <Button 
                Content="Залы"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="HallsButton_Click"/>
        <Button
                Content="Абонементы"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="SubscriptionsButton_Click"/>
        
        <Button 
                Content="Тренера"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="TrainersButton_Click"/>

        <Button 
                Content="Менеджеры"
                Margin="8 4"
                materialDesign:ButtonAssist.CornerRadius="4"
                Click="ClientsButton_Click"/>


        <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="8 0 8 8"/>
    </StackPanel>
</Page>